alias saver="clear; ls -l ~; sleep 7; open /System/Library/Frameworks/ScreenSaver.framework/Versions/A/Resources/ScreenSaverEngine.app"
alias serve="ruby -run -e httpd . -p 9090"

alias be='bundle exec'

alias g="git status"
alias ga="git add -A"
alias gb="clear && git branch -a"
alias gbl="clear && git branch"
alias gcm="git commit -m"
alias gd="git diff"
alias gdc="git diff --cached"
alias gl="git log -15 --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an %Creset%s %Cgreen%d' --date=short"
alias cgl='clear; gl'
alias gco="git checkout"
alias glcc="git log -1 --pretty=format:'%h' | pbcopy"

alias ctls="clear; tmux ls"
alias ta="tmux a -t"
